# OpenCode Discord Bot Configuration
# Copy to config.yaml and fill in your values.

discord:
  token: "YOUR_DISCORD_BOT_TOKEN"
  # Only listen to messages in these channels (by name).
  # Leave empty to listen in all channels the bot has access to.
  allowed_channels: []
  # Command prefix for bot commands
  prefix: "!"

opencode:
  # Host and port for the opencode serve process
  hostname: "127.0.0.1"
  port: 4096
  # Optional: HTTP basic auth (set OPENCODE_SERVER_PASSWORD env var instead)
  # username: "opencode"
  # password: ""
  # Working directory where opencode serve runs (your project root)
  working_directory: "."

# Internal HTTP API for programmatic channel/session creation.
# Use POST /api/trigger to create a channel, start a session, and send a prompt
# without any Discord user interaction.
api:
  enabled: false
  # Bind address and port for the API server
  host: "127.0.0.1"
  port: 8080
  # Bearer token required in the Authorization header (leave empty to disable auth)
  secret_key: "CHANGE_ME"
